@{
  Layout = "_Layout";
}

<div class="container card">
<br />
@if (User.Identity.IsAuthenticated)
{

    <p>Are you sure you want to sign out, <strong>@User.Identity.Name</strong>?</p>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-default" value="Log me out!" />
    }
    <br />
}
else
{
    <p>@Html.ActionLink("Log in", "Login")</p>
    <p>@Html.ActionLink("Register", "Register")</p>
    <hr />
    <p>@Html.ActionLink("Continue as Guest", "Index", "Home")</p>
}

</div>