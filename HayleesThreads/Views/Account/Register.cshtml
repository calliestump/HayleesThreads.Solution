@{
  Layout = "_Layout";
}

@using HayleesThreads.ViewModels

@model RegisterViewModel
<div class="container card">
<h3><strong>Register</strong></h3>

<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.Email)<br>
    @Html.TextBoxFor(user=> user.Email)<br><br>

    @Html.LabelFor(user=> user.Password)<br>
    @Html.PasswordFor(user=> user.Password)<br><br>

    @Html.LabelFor(user=> user.ConfirmPassword)<br>
    @Html.PasswordFor(user=> user.ConfirmPassword)<br><br>

    <input type="submit" value="Register" />
}
<br /><br />
<p>Already have an account?</p>
<p>@Html.ActionLink("Log in", "Login")</p>
<hr />
<p>@Html.ActionLink("Continue as Guest", "Index", "Home")</p>
</div>