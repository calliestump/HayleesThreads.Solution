    <span id="productCard">
      <br />
      <h1><strong>Admin Controls</strong></h1>
      <hr />
      <br />
      <p>@Html.ActionLink("Upload new product", "Create")</p>
      <p>@Html.ActionLink("Manage Categories", "Index", "Categories")</p>
      <br />
    </span>
    
  </div>
}
