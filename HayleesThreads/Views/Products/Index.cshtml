@{
  Layout = "_Layout";
}

@using HayleesThreads.Models;
@model List<HayleesThreads.Models.Product>;
<div class="productCollection">
<h2 style="color: white"><i>HayleesThreads</i> Collection</h2>
<span><a class="nav-link" href= "/Categories">See All Categories</a></span>
<hr />
@if (Model.Count == 0)
{
  <h4><span>No products have been added to HayleesThreads :(</span></h4> // This will not show on views. Unsure if it is a syntax or VS error.
}

@foreach (Product product in Model)
{
    <br />
    <div class="container card">
    <h4>@Html.ActionLink("'" + $"{product.ProductName}" + "'", "Details", new { id = product.ProductId })</h4>
    </div>
  <br />
}
<br />
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin")) 
{
  <p>@Html.ActionLink("Add new product", "Create")</p>
}
</div>