@{
  Layout = "_Layout";
}

@model List<HayleesThreads.ViewModels.UserRoleViewModel>

@{
  var roleId = ViewBag.roleId;
}

@using (Html.BeginForm("EditUsersInRole", "Administration", FormMethod.Post))
{
  <br>
  <div class="container card">
    <div class="card-header">
      <h1>Select users for role:</h1>
    </div>
    <div class="card-body">
      @for(int i = 0; i < Model.Count; i++)
      {
        <div class="form-check">
          @Html.HiddenFor(model => model[i].UserId)
          @Html.HiddenFor(model => model[i].UserName)
          @Html.CheckBoxFor(model => model[i].IsSelected)
         <span id="editUsers">@Html.DisplayFor(model => model[i].UserName)</span> 
        </div>
      }
    </div>
    <div class="card-footer">
      <input type="submit" value="Update" class="btn btn-outline-light" />
      
      @Html.ActionLink("Cancel", "EditRole", "Administration", new { id = roleId }, new { @class="btn btn-outline-light" })
      
    </div>
  </div>
}