@{
  Layout = "_Layout";
}

@using HayleesThreads.ViewModels
@model CreateRoleViewModel

<h1>Register a User Role</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          @using (Html.BeginForm("CreateRole", "Administration", FormMethod.Post))
          {
            <div class="card-body">
              <div class="form-group">
                <strong style="color:rgb(133, 115, 96)">@Html.Label("Role Name")</strong>
                @Html.TextBoxFor(user=> user.RoleName, new { @class="form-control"})
              </div> 
              @Html.ValidationSummary(false,"",new { @class = "text-danger"})
            </div>
              <input type="submit" value="Create Role" class="btn btn-outline-light" />
              @Html.ActionLink("Cancel", "ListRoles", "Administration", null, new { @class="btn btn-outline-light" })
          } 
        </div>
      </div>
    </div>
  </div>
</div>