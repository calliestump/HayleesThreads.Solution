@{
  Layout = "_Layout";
}

@using HayleesThreads.Models;
@model List<HayleesThreads.Models.Category>;
<div class="categorySelection">
  <h3>HayleesThreads Categories</h3>
  @if (User.Identity.IsAuthenticated && User.IsInRole("Admin")) 
  {
      <a class="nav-link" href= "/CategoryManager">Manage Categories</a>
  }
  <hr />
  @if (Model.Count == 0)
  {
    <h4><span>No categories have been added to HayleesThreads :(</span></h4>
  }
  
  @foreach (Category category in Model)
  {
    <div class="container card">
      <h4>@Html.ActionLink($"{category.CategoryName}", "Details", new { id = category.CategoryId })</h4>
    </div>
    <br />
  }
  <br />
  <p>@Html.ActionLink("Add new category", "Create")</p>
</div>